@model Kuse_App.Models.Guest

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8" />
    <title>Vasta kutsele</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F0F8FF;
            margin: 0;
            padding: 0;
        }

        .form-container {
            width: 100%;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #5F9EA0;
        }

        p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        input[type="text"], select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #5F9EA0;
            border-radius: 5px;
            font-size: 16px;
        }

        input[type="submit"] {
            background-color: #5F9EA0;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            input[type="submit"]:hover {
                background-color: #4E8C8A;
            }

    </style>
</head>
<body>

    <div class="form-container">
        <h2>Vasta kutsele</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "validation-summary" })
            <p>Sisestage nimi: @Html.TextBoxFor(x => x.Name)</p>
            <p>Sisestage email: @Html.TextBoxFor(x => x.Email)</p>
            <p>Sisestage tel: @Html.TextBoxFor(x => x.Phone)</p>
            <p>
                Sinu valik:
                @Html.DropDownListFor(x => x.WillAttend,
                              new[]
                              {
                            new SelectListItem() {Text="Tule kindlasti!", Value=bool.TrueString},
                            new SelectListItem() {Text="Kahjuks ei saa tulla!", Value=bool.FalseString},
                              },
                              "Vali siit")
            </p>
            <input type="submit" value="Saada vastus" />
        }
    </div>

</body>
</html>
